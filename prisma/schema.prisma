generator client {
  provider = "prisma-client-js"
  output   = "../../../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Analysis {
  id                 String   @id @default(cuid()) // Using CUID for unique IDs
  teacher_id         String   // To store the Clerk User ID
  transcript_title   String?  // Optional title for the analysis
  transcript_content String   @db.Text // For potentially long transcripts
  analysis_json      Json     // To store the structured JSON output from OpenAI
  pass_status        Boolean? // Optional: directly store pass/fail if not always in JSON
  created_at         DateTime @default(now())
  updated_at         DateTime @updatedAt

  @@index([teacher_id]) // Add an index for querying by teacher_id
} 